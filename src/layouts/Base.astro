---
import "@/styles/global.css";
import { site } from "@/data/site";
const { name, role, phone, email, github } = site;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name} - {role}</title>
    <meta name="description" content="Portfolio of {name}, {role}." />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="apple-touch-icon" href="/favicon-180.png" />
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans antialiased selection:bg-base-accent/30">
    <header class="container py-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
        <div class="text-sm muted">
          <span class="mr-3">üìç {site.location}</span>
          <span class="mr-3">‚òéÔ∏è <a href={"tel:" + phone.replace(/\s+/g,'')}>{phone}</a></span>
          <span class="mr-3">‚úâÔ∏è <a href={"mailto:" + email}>{email}</a></span>
        </div>
        <div class="text-sm">
          <a href={github} target="_blank" rel="noopener">GitHub</a>
        </div>
      </div>
      <hr class="mt-6" />
    </header>
    <main>
      <slot />
    </main>
    <footer class="container py-12 muted text-sm">
      <hr class="mb-6" />
      <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-3">
        <p>&copy; {new Date().getFullYear()} {name}. All rights reserved.</p>
        <p>Built with Astro ‚Ä¢ Deployed on Cloudflare Pages</p>
      </div>
    </footer>
  </body>
</html>
