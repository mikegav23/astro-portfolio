---
const { title, blurb, stack = [], link = "#", repo = "#" } = Astro.props;
---
<article class="card p-6 hover:-translate-y-1 transition">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-xl font-semibold">{title}</h3>
    <div class="flex gap-3 text-sm">
      {link && <a href={link} target="_blank" rel="noopener" class="chip">View</a>}
      {repo && <a href={repo} target="_blank" rel="noopener" class="chip">Repo</a>}
    </div>
  </div>
  <p class="mt-3 muted">{blurb}</p>
  {stack.length > 0 && (
    <ul class="flex flex-wrap gap-2 mt-4">
      {stack.map((s) => <li class="chip">{s}</li>)}
    </ul>
  )}
</article>
