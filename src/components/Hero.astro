---
import { site } from "@/data/site";
---
<section class="container section pt-10 md:pt-16">
  <div class="grid md:grid-cols-12 gap-10 items-center">
    <div class="md:col-span-7">
      <p class="chip mb-4">Available for remote work</p>
      <h1 class="h1">{site.name}</h1>
      <p class="text-xl md:text-2xl mt-3 muted">{site.role}</p>
      <p class="mt-6 max-w-2xl text-lg">{site.tagline}</p>
      <div class="mt-8 flex gap-3">
        <a class="btn" href="#projects">View Projects</a>
        <a class="btn" href={"mailto:" + site.email}>Contact Me</a>
      </div>
    </div>
    <div class="md:col-span-5">
      <div class="card p-6">
        <h3 class="font-semibold text-lg mb-3">About</h3>
        <p class="muted">{site.about}</p>
        <h4 class="font-semibold mt-6 mb-2">Skills</h4>
        <ul class="flex flex-wrap gap-2">
          {site.skills.map((s) => <li class="chip">{s}</li>)}
        </ul>
      </div>
    </div>
  </div>
</section>
